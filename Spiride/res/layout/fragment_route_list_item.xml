<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <RelativeLayout android:orientation="vertical"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
        
        <TextView android:id="@+id/route_list_item_routeID" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
             />
        
        <TextView android:id="@+id/route_list_item_routeName" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_below="@id/route_list_item_routeID"
             />
        
        <TextView android:id="@+id/route_list_item_routeStart" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_below="@id/route_list_item_routeName"
             />
        
        <TextView android:id="@+id/route_list_item_routeEnd" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/route_list_item_routeStart"
            
             />
        
        <TextView android:id="@+id/route_list_item_routeSampleNum" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/route_list_item_routeEnd"
            
             />
	</RelativeLayout>
	
</LinearLayout>